<link rel="stylesheet" href="<%= assetPath('css/user_sign_up.css') %>">
<link rel="shortcut icon" href="<%= assetPath('images/logo.svg') %>" type="image/x-icon">
<script src="https://kit.fontawesome.com/d4a2c7cd00.js" crossorigin="anonymous"></script>

<div id='main-container'>

    <div id="sign-up">

        <h1>Sign Up</h1>
        
        <form action="/users/create" method="post">
            <input type="text" name="name" placeholder="Name" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="password" name="confirm_password" placeholder="Confirm password" required>
            <input type="submit" value="SIGN UP">
        </form>
        
        <p>
            <a href="/users/auth/google"><i class="fa-brands fa-google"></i> Google Sign In /Sign Up</a>
        </p>
        
    </div>
</div>