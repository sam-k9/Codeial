<link rel="stylesheet" href="<%= assetPath('css/home.css') %>" />
<link rel="shortcut icon" href="<%= assetPath('images/logo.svg') %>" type="image/x-icon">
<script src="https://kit.fontawesome.com/d4a2c7cd00.js" crossorigin="anonymous"></script>

<div id="home-container">
  <section id="feed-posts">
    <h4><i class="fa-solid fa-address-card"></i> Posts</h4>
    <% if(locals.user){ %>
      <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" cols="30" rows="3" placeholder="Type here..." required></textarea>
        <input type="submit" value="Post" />
      </form>
      <% } %>

        <div id="posts-list-container">
          <ul>
            <% for(post of posts){ %> <%- include('_post') -%>
                <% } %>
          </ul>
        </div>
  </section>
  <div id="friends-container">
    <section id="users-friends">
      <h4><i class="fa-solid fa-user-group"></i> Users</h4>
      <% for (u of all_users){ %>
        <p>
          <a href="/users/profile/<%= u.id %>"><i class="fa-solid fa-heart"></i>
            <%= u.name %>
          </a>
        </p>
        <% } %>
    </section>
  </div>
</div>

<!-- importing this script for creating the comments -->
<script src="<%= assetPath('js/home_post_comments.js') %>"></script>
<script src="<%= assetPath('js/home_posts.js') %>"></script>